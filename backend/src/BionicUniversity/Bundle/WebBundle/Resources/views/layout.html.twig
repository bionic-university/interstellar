{% extends '::base.html.twig' %}

{% block body %}
    <nav class="col-lg-2">
        <ul>
            {% for category in categories() %}
                <li>
                    <a href="{{ path('category_index', {name: category.name}) }}">
                        {{ category.name }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </nav>
    <div class="col-lg-10">
    {% block content %}
    {% endblock %}
    </div>
{% endblock %}