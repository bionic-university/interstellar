{% extends '::base.html.twig' %}

{% block body -%}
    <h1>
        <i class="fa fa-user"></i>
        User list
    </h1>

    <ul class="list-inline">
        <li>
            <a href="{{ path('user_new') }}" class="btn btn-success">
                Create a new entry
            </a>
        </li>
    </ul>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Active</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.email }}</td>
                <td>
                    <i class="{{ entity.isActive ? 'fa fa-toggle-on text-success' : 'fa fa-toggle-off text-muted' }}"></i>
                </td>
                <td>
                    {% if entity.roles %}
                        {{ entity.roles|join(', ') }}
                    {% else %}
                        &lt; none &gt;
                    {% endif %}
                </td>
                <td>
                <ul class="list-inline">
                    <li>
                        <a href="{{ path('user_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('user_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
