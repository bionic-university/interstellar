{% extends '::base.html.twig' %}

{% block body %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Login:</h3>
        </div>
        <div class="panel-body">

            {% if error %}
                <div class="alert alert-danger alert-dismissible alert-fixed-top">
                    <strong>Ooops:</strong> {{ error.message }}
                    <button type="button" class="close" data-dismiss="alert">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            {% endif %}
            <form action="{{ path('user_sign_in_check') }}" method="post">
                <input type="hidden" name="_target_path" value="{{ path('index') }}" />
                <div class="form-group">
                    <label for="username" class="control-label">Username:</label>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-user"></i>
                        </span>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="control-label">Password:</label>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-lock"></i>
                        </span>
                        <input type="password" id="password" name="_password" class="form-control">
                    </div>
                </div>
               {#
                If you want to control the URL the user
                is redirected to on success (more details below)
               #}


                <button type="submit" class="btn btn-success pull-right"><i class="fa fa-sign-in"></i>&nbsp;Login</button>
            </form>
        </div>

    </div>

{% endblock %}
