{% extends '::base.html.twig' %}

{% block body -%}
    <h1>
        <i class="fa fa-shopping-cart"></i>
        Purchase list
    </h1>

    <ul class="list-inline">
        <li>
            <a href="{{ path('purchase_new') }}" class="btn btn-success">
                Create a new entry
            </a>
        </li>
    </ul>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sum</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Telephonenumber</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('purchase_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.sum }}</td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.telephoneNumber }}</td>
                <td>
                <ul class="list-inline">
                    <li>
                        <a href="{{ path('purchase_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('purchase_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
